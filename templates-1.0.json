{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "Datalake",
      "name": "Datalake",
      "hostname": "datalake",
      "description": "Local Datalake for Apps based on Eclipse Mosquitto message broker.",
      "info_url": "https://mosquitto.org/",    
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/mosquitto-logo.png",
      "image": "eclipse-mosquitto",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": ["1883/tcp"],
      "volumes": ["/home/edge/apps/datalake/config:/mosquitto/config",
		  "/home/edge/apps/datalake/data:/mosquitto/data",
		  "/home/edge/apps/datalake/log:/mosquitto/log"]
    },
    {
      "type": 1,
      "title": "Mqtt Cloud Connector",
      "name": "Mqtt-Cloud-Connector",
      "hostname": "mqtt-cloud-connector",
      "description": "Connect any topic from Local DataLake to any Cloud Provider",
      "info_url": "https://github.com/cadugrillo/mqtt-cloud-connector",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo-small.png",
      "image": "cadugrillo/mqtt-cloud-connector:1.6",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": [],
      "volumes": ["/home/edge/apps/mqtt-cloud-connector/config:/config",
		  "/home/edge/apps/mqtt-cloud-connector/certs:/certs"]
    },
    {
      "type": 1,
      "title": "Node Creator",
      "name": "Node-Creator",
      "hostname": "node-creator",
      "description": "Create data flows using nodes based on Node-RED.",
      "info_url": "https://nodered.org/",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/nodered-logo.png",
      "image": "nodered/node-red",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": ["1880:1880/tcp"],
      "volumes": ["nodered-data:/data"]
    },
    {
      "type": 1,
      "title": "Opcua Mqtt Connector",
      "name": "Opcua-Mqtt-Connector",
      "hostname": "opcua-mqtt-connector",
      "description": "Connect any OPC-UA Server to Local DataLake",
      "info_url": "https://github.com/cadugrillo/opcua-mqtt-connector",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo-small.png",
      "image": "cadugrillo/opcua-mqtt-connector:1.5",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": [],
      "volumes": ["/home/edge/apps/opcua-mqtt-connector/config:/config"]
    },
    {
      "type": 1,
      "title": "Grafana",
      "name": "Grafana",
      "hostname": "grafana",
      "description": "Query, visualize, alert on, and understand your data.",
      "info_url": "https://grafana.com/docs/grafana/latest/introduction/",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/grafana-logo.png",
      "image": "grafana/grafana",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": ["3000:3000/tcp"],
      "volumes": ["grafana-data:/var/lib/grafana"]
    },
    {
      "type": 1,
      "title": "InfluxDB",
      "name": "InfluxDB",
      "hostname": "influxdb",
      "description": "Open source time series database for recording metrics, events, and analytics.",
      "info_url": "https://docs.influxdata.com/influxdb/v2.3/",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/influxdb-logo.png",
      "image": "influxdb:2.3",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": ["DOCKER_INFLUXDB_INIT_MODE=setup",
	      "DOCKER_INFLUXDB_INIT_USERNAME=cguser",
	      "DOCKER_INFLUXDB_INIT_PASSWORD=cguser01",
	      "DOCKER_INFLUXDB_INIT_ORG=cg-edge",
	      "DOCKER_INFLUXDB_INIT_BUCKET=cg-bucket1"],
      "ports": ["8086:8086/tcp"],
      "volumes": ["influxdb-data:/var/lib/influxdb2"]
    },
    {
      "type": 1,
      "title": "MongoDB",
      "name": "MongoDB",
      "hostname": "mongo",
      "description": "Open-source document-oriented database.",
      "info_url": "https://www.mongodb.com/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/mongo.png",
      "image": "mongo:4.4",
      "restart_policy": "unless-stopped",
      "network": "cg-edge",
      "env": ["MONGO_INITDB_ROOT_USERNAME=root",
	      "MONGO_INITDB_ROOT_PASSWORD=root"],
      "ports": ["27017:27017/tcp"],
      "volumes": ["mongo-data:/data/db"]
    },
    {
      "type": 1,
      "title": "MySQL",
      "name": "MySQL",
      "hostname": "mysql",
      "description": "The most popular open-source database.",
      "info_url": "https://www.mysql.com/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/mysql.png",
      "image": "mysql:latest",
      "restart_policy": "unless-stopped",
      "network": "cg-edge",
      "env": ["MYSQL_ROOT_PASSWORD=root"],
      "ports": ["3306:3306/tcp"],
      "volumes": ["mysql-data:/data/db"]
    },
    {
      "type": 1,
      "title": "MariaDB",
      "name": "MariaDB",
      "hostname": "mariadb",
      "description": "Performance beyond MySQL.",
      "info_url": "https://mariadb.org/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/mariadb.png",
      "image": "mariadb:latest",
      "restart_policy": "unless-stopped",
      "network": "cg-edge",
      "env": ["MYSQL_ROOT_PASSWORD=root"],
      "ports": ["3306:3306/tcp"],
      "volumes": ["mariadb-data:/data/db"]
    }
  ]
}
