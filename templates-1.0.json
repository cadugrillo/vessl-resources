{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "Mosquitto",
      "name": "Mosquitto",
      "hostname": "mosquitto",
      "description": "Open source message broker that implements the MQTT protocol.",
      "info_url": "https://mosquitto.org/",    
      "categories": ["broker"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/mosquitto-logo.png",
      "image": "eclipse-mosquitto",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "ports": ["1883/tcp"],
      "volumes": ["mosquitto-data:/mosquitto"]
    },
    {
      "type": 1,
      "title": "Mqtt PubSub",
      "name": "Mqtt PubSub",
      "hostname": "mqtt-pubsub",
      "description": "Connect any topic from one MQTT Broker to another.",
      "info_url": "https://github.com/cadugrillo/mqtt-pub-sub",
      "categories": ["vessl-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/vessl-logo.png",
      "image": "vessl/mqtt-pubsub:0.1",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "ports": ["9091:9091/tcp"],
      "volumes": ["mqtt-pubsub-data:/config"]
    },
    {
      "type": 1,
      "title": "Node-RED",
      "name": "Node-RED",
      "hostname": "node-red",
      "description": "Create data flows using nodes with Node-RED.",
      "info_url": "https://nodered.org/",
      "categories": ["process-automation"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/nodered-logo.png",
      "image": "nodered/node-red",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "ports": ["1880:1880/tcp"],
      "volumes": ["nodered-data:/data"]
    },
    {
      "type": 1,
      "title": "Grafana",
      "name": "Grafana",
      "hostname": "grafana",
      "description": "Query, visualize, alert on, and understand your data.",
      "info_url": "https://grafana.com/docs/grafana/latest/introduction/",
      "categories": ["data-visualization"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/grafana-logo.png",
      "image": "grafana/grafana",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "ports": ["3000:3000/tcp"],
      "volumes": ["grafana-data:/var/lib/grafana"]
    },
    {
      "type": 1,
      "title": "InfluxDB",
      "name": "InfluxDB",
      "hostname": "influxdb",
      "description": "Open source time series database for recording metrics, events, and analytics.",
      "info_url": "https://docs.influxdata.com/influxdb/v2.3/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/influxdb-logo.png",
      "image": "influxdb:2.3",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": ["DOCKER_INFLUXDB_INIT_MODE=setup",
	      "DOCKER_INFLUXDB_INIT_USERNAME=cguser",
	      "DOCKER_INFLUXDB_INIT_PASSWORD=cguser01",
	      "DOCKER_INFLUXDB_INIT_ORG=cg-edge",
	      "DOCKER_INFLUXDB_INIT_BUCKET=cg-bucket1"],
      "ports": ["8086:8086/tcp"],
      "volumes": ["influxdb-data:/var/lib/influxdb2"]
    },
    {
      "type": 1,
      "title": "Chronograf",
      "name": "Chronograf",
      "hostname": "chronograf",
      "description": "Chronograf is a visualization tool for time series data in InfluxDB.",
      "info_url": "https://docs.influxdata.com/chronograf",
      "categories": ["data-visualization"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/influxdb-logo.png",
      "image": "chronograf",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": ["INFLUXDB_URL=http://influxdb:8086"],
      "cmd": [],
      "ports": ["8888:8888/tcp"],
      "volumes": ["chronograf-data:/var/lib/chronograf"]
    },
    {
      "type": 1,
      "title": "Telegraf",
      "name": "Telegraf",
      "hostname": "telegraf",
      "description": "Open source agent for collecting metrics and data.",
      "info_url": "https://docs.influxdata.com/telegraf/",
      "categories": ["data-aggregation"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/influxdb-logo.png",
      "image": "telegraf",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": ["INFLUX_URL=http://influxdb:8086"],
      "ports": [],
      "volumes": []
    },
    {
      "type": 1,
      "title": "MongoDB",
      "name": "MongoDB",
      "hostname": "mongo",
      "description": "Open-source document-oriented database.",
      "info_url": "https://www.mongodb.com/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/mongo.png",
      "image": "mongo:4.4",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": ["MONGO_INITDB_ROOT_USERNAME=root",
	      "MONGO_INITDB_ROOT_PASSWORD=root"],
      "ports": ["27017:27017/tcp"],
      "volumes": ["mongo-data:/data/db"]
    },
    {
      "type": 1,
      "title": "MySQL",
      "name": "MySQL",
      "hostname": "mysql",
      "description": "The most popular open-source database.",
      "info_url": "https://www.mysql.com/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/mysql.png",
      "image": "mysql:latest",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": ["MYSQL_ROOT_PASSWORD=root"],
      "ports": ["3306:3306/tcp"],
      "volumes": ["mysql-data:/data/db"]
    },
    {
      "type": 1,
      "title": "MariaDB",
      "name": "MariaDB",
      "hostname": "mariadb",
      "description": "Performance beyond MySQL.",
      "info_url": "https://mariadb.org/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/mariadb.png",
      "image": "mariadb:latest",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": ["MYSQL_ROOT_PASSWORD=root"],
      "ports": ["3306:3306/tcp"],
      "volumes": ["mariadb-data:/data/db"]
    },
     {
      "type": 1,
      "title": "Redis",
      "name": "Redis",
      "hostname": "redis",
      "description": "The open source, in-memory data store.",
      "info_url": "https://redis.io/",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/redis-logo.svg",
      "image": "redis",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "cmd": ["redis-server", "--save", "60", "1", "--loglevel", "warning"],
      "ports": [],
      "volumes": ["redis-data:/data"]
    },
    {
      "type": 1,
      "title": "Jira",
      "name": "Jira",
      "hostname": "jira",
      "description": "The #1 software development tool used by agile teams.",
      "info_url": "https://www.atlassian.com/software/jira",
      "categories": ["productivity"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/jira-logo.png",
      "image": "atlassian/jira-software",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "cmd": [],
      "ports": [],
      "volumes": ["jira-data:/var/atlassian/application-data/jira"]
    },
    {
      "type": 1,
      "title": "Home Assistant",
      "name": "Home Assistant",
      "hostname": "homeassistant",
      "description": "Open-source home automation that puts local control and privacy first.",
      "info_url": "https://www.home-assistant.io/",
      "categories": ["home-automation"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/homeassistant-logo.png",
      "image": "ghcr.io/home-assistant/home-assistant:stable",
      "restart_policy": "unless-stopped",
      "network": "host",
      "run": ["--privileged"],
      "env": ["TZ=America/New_York"],
      "ports": [],
      "volumes": ["homeassistant-data:/config"]
    },
     {
      "type": 1,
      "title": "Ignition",
      "name": "Ignition",
      "hostname": "ignition",
      "description": "The Unlimited Platform for SCADA and So Much More.",
      "info_url": "https://inductiveautomation.com/ignition/",
      "categories": ["process-automation"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/ignition-logo.png",
      "image": "inductiveautomation/ignition:latest",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "cmd": ["-n", "docker-vessl", "-a", "localhost", "-h", "9088", "-s", "9043"],
      "ports": ["9088:8088/tcp"],
      "volumes": ["ignitiongw-data:/usr/local/bin/ignition/data"]
    },
    {
      "type": 1,
      "title": "Wordpress",
      "name": "Wordpress",
      "hostname": "wordpress",
      "description": "WordPress is a free and open source blogging tool and a CMS.",
      "info_url": "https://wordpress.org/",
      "categories": ["productivity"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/vessl-resources/main/wordpress-logo.png",
      "image": "wordpress",
      "restart_policy": "unless-stopped",
      "network": "vessl-default",
      "env": [],
      "cmd": [],
      "ports": ["8080:80/tcp"],
      "volumes": ["wordpress-data:/var/www/html"]
    }
  ]
}
